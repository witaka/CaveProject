<h1>Admin Dashboard</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Is Admin?</th>
      <th>Points</th>
      <th>Approved?</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.admin? %></td>
        <td><%= user.points %></td>
        <td>
        <% if (user.approved )  %>
        <%= link_to 'Approved', user, method: :patch %>
        <%  else  %>
        <%= link_to 'Not Approved', user, method: :patch %>
        

        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>