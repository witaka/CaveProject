<ul class="list-inline" style="text-align: center">
  <% @quizzes.each do |quiz| %>
    <li class="list-inline-item">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Title: <%= quiz.title %></h5>
          <p class="card-text">Points: <%= quiz.points %></p>
          <p class="card-text">Level: <%= quiz.level %></p>
          <a href="/quizzes/<%= quiz.id %>" class="btn btn-primary">Take the quiz!</a>
        </div>
      </div>
    </li>
  <% end %>
</ul>