<%= simple_form_for(@quiz) do |f| %>
  <%= f.input :title %>
  <%= f.input :points %>
  <%= f.input :passmark %>
  <%= f.input :level, :as => :radio_buttons,:item_wrapper_class => 'inline', collection: ['beginner', 'intermediate', 'advanced']%>
 
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

   